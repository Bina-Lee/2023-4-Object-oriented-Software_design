{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-stdlib=libc++",
                "-g",
                "./*.cpp",
                // "-I/Users/bagsiu/Desktop/SFML-2.6.0-macos-clang-arm64/include",
                // "-L/Users/bagsiu/Desktop/SFML-2.6.0-macos-clang-arm64/lib",
                // "-I/opt/homebrew/Cellar/sfml/2.6.0/include",
                // "-L/opt/homebrew/Cellar/sfml/2.6.0/lib",
                // "-lsfml-window",
                // "-lsfml-system",
                // "-lsfml-graphics",
                // "-lsfml-audio",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                // "-v",
                // 빌드 후 자동 실행을 위한 커맨드
                // "&&",
                // "./${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "execute cpp after build",
            "command": "cd",
            "args": [
                "${fileDirname}",
                "&&",
                "./${fileBasenameNoExtension}",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "C/C++: clang++ build"
            ]
        }
    ],
    "version": "2.0.0"
}